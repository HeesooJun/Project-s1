{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm watch:ext & next dev --turbopack",
    "build": "pnpm build:ext && next build --turbopack",
    "start": "next start",
    "build:ext": "esbuild src/background.ts --bundle --outfile=public/background.js && esbuild src/app/popup-loader.tsx --bundle --outfile=public/popup.js --jsx=automatic",
    "watch:ext": "esbuild src/background.ts --bundle --outfile=public/background.js --watch & esbuild src/app/popup-loader.tsx --bundle --outfile=public/popup.js --jsx=automatic --watch"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/chrome": "^0.1.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "esbuild": "^0.25.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
